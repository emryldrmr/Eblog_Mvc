@using Eblog.Data.ValueObjects
@model RegisterViewModel



@{
    /**/

    ViewBag.Title = "Üyelik Sayfası";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>E-Bilge.NET - @ViewBag.Title</title>

    <link href="~/Content/login.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
</head>
<body>
    <div class="wrapper">
        @using (Html.BeginForm("Kayit", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "UyelikForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            <div class="col-lg-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title"></h4>
                    </div>
                    <div class="content">
                        <form role="form">
                            <div class="form-group col-md-4 col-md-offset-4">
                                @Html.TextBoxFor(x => x.AdSoyad, new { @class = "form-control border-input", id = "kullaniciadsoyad", placeholder = "Kullanıcı Adı ve Soyadı", required = "required" })
                            </div>
                            <div class="form-group col-md-4 col-md-offset-4">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control border-input", id = "kullaniciemail", placeholder = "Kullanıcı Email", type = "email", required = "required" })
                            </div>
                            <div class="form-group col-md-4 col-md-offset-4">
                                @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control border-input", id = "kullanicisifre", placeholder = "Kullanıcı Şifre", type = "password", required = "required" })
                            </div>
                            <div class="form-group col-md-4 col-md-offset-4">
                                @Html.TextBoxFor(x => x.ReSifre, new { @class = "form-control border-input", id = "kullaniciresifre", placeholder = "Kullanıcı Şifre Yeniden", required = "required" })
                            </div>
                            <br />
                            <div class="form-group col-md-12" style="text-align:center">
                                <button type="submit" class="btn btn-default" id="Uyelik">Kaydet</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }

        <ul class="bg-bubbles">
            <li>e-bilge</li>
            <li>e-bilge</li>
            <li>e-bilge</li>
            <li>e-bilge</li>
            <li>e-bilge</li>
            <li>e-bilge</li>
            <li>e-bilge</li>
            <li>e-bilge</li>
            <li>e-bilge</li>
            <li>e-bilge</li>
        </ul>
    </div>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootbox.min.js"></script>
    <script src="~/Scripts/jquery.form.js"></script>
    


    <script src="~/Scripts/login.js"></script>
    <script>
        $(document).ready(function () {
            $(document).on("click", "#Uyelik", function () {
                $('#UyelikForm').ajaxForm({
                    success: function (response) {
                        if (response.Success) {
                            bootbox.alert(response.Message, function () {
                                location.href = "/Home/Index";
                            });

                        }
                        else {
                            bootbox.alert(response.Message, function () {
                                // geridöndüğünde bir şey yapılması isteniyorsa buraya yazılır
                            });
                        }
                    }
                })
            })
        })
    </script>
</body>
</html>
