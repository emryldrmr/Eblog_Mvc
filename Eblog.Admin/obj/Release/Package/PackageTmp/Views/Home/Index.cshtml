    <script src="~/User/js/jquery.viewport.mini.js"></script>
    <script src="~/User/js/jquery.waypoints.min.js"></script>
    <script src="~/User/js/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/User/js/imagesloaded.pkgd.min.js"></script>
    <script src="~/User/js/jquery.isotope.min.js"></script>
    <script src="~/User/js/jquery.magnific-popup/jquery.magnific-popup.min.js"></script>
    <script src="~/User/js/jquery.fluidbox/jquery.fluidbox.min.js"></script>
    <script src="~/User/js/owl-carousel/owl.carousel.min.js"></script>
    <script src="~/User/js/selection-sharer/selection-sharer.js"></script>
    <script src="~/User/js/socialstream.jquery.js"></script>
    <script src="~/User/js/jquery.collagePlus/jquery.collagePlus.min.js"></script>
    <script src="~/User/js/main.js"></script>
    <script src="~/User/js/shortcodes/shortcodes.js"></script>

</body>

