@using Eblog.Data.ValueObjects
@model LoginViewModel

@{
    ViewBag.Title = "Giriş Sayfası";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>E-Bilge.NET - @ViewBag.Title</title>

    <link href="~/Content/login.css" rel="stylesheet" />

</head>
<body>
    <div class="wrapper">
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title"></h3>
                            </div>
                            <div class="panel-default">
                                <form accept-charset="UTF-8" role="form">

                                    <div class="form-group">
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Mail Adresinizi Giriniz.", type = "email", required = "required" })
                                    </div>
                                    <div class="form-group">

                                        @Html.TextBoxFor(model => model.Sifre, new { @class = "form-control", placeholder = "Şifreinizi Giriniz.", type = "password", required = "required" })
                                    </div>
                                    <br />
                                    <button type="submit" class="btn btn-default">Giriş Yap</button>
                                    <br /><br />
                                    <div class="form-group">
                                        <a href="@Url.Action("Kayit","Home")" class="button">Şimdi Kayıt Ol</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <ul class="bg-bubbles">
            <li>e-bilge</li>
            <li>e-bilge</li>
            <li>e-bilge</li>
            <li>e-bilge</li>
            <li>e-bilge</li>
            <li>e-bilge</li>
            <li>e-bilge</li>
            <li>e-bilge</li>
            <li>e-bilge</li>
            <li>e-bilge</li>
        </ul>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>


    <script src="~/Scripts/login.js"></script>

</body>
</html>
